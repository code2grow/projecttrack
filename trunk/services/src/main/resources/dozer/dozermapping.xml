<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mappings PUBLIC "-//DOZER//DTD MAPPINGS//EN"
    "http://dozer.sourceforge.net/dtd/dozerbeanmapping.dtd">
<mappings>

	<mapping>
		<class-a>org.jia.ptrack.domain.Project</class-a>
		<class-b>org.jia.ptrack.facade.ProjectSummary</class-b>

		<field copy-by-reference="true">
			<a>type</a>
			<b>type</b>
		</field>
		<field>
			<a>status.name</a>
			<b>statusName</b>
		</field>
	</mapping>

	<mapping>
		<class-a>org.jia.ptrack.domain.Project</class-a>
		<class-b>org.jia.ptrack.facade.ProjectDetails</class-b>

		<field copy-by-reference="true">
			<a>type</a>
			<b>type</b>
		</field>
		<field>
			<a>status.name</a>
			<b>statusName</b>
		</field>
		<field>
			<a>initiatedBy.fullName</a>
			<b>initiatedBy</b>
		</field>
		<field copy-by-reference="true">
			<a>artifacts</a>
			<b>artifacts</b>
		</field>
	</mapping>

</mappings>