<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="seleniumLauncher"
		class="net.chrisrichardson.umangite.SeleniumLauncher" >
		<property name="browserType" value="*firefox"/>
	</bean>

	<bean id="properties"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath*:/config/development/**/*.properties</value>
				<value>classpath*:/config/${ptrack.application.environment}/**/*.properties</value>
			</list>
		</property>
		<property name="ignoreResourceNotFound" value="false" />
		<property name="systemPropertiesModeName"
			value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
	</bean>

</beans>