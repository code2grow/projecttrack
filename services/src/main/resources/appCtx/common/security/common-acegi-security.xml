	<bean id="userDetailsService"
		class="org.jia.ptrack.security.PtrackUserDetailsService">
		<constructor-arg ref="userRepository"/>
	</bean>

	<bean id="loggerListener"
		class="org.acegisecurity.event.authentication.LoggerListener" />

	<!-- pia-lab-end -->

</beans>
